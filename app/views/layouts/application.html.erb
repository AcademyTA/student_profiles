<!DOCTYPE html>
<html>
<head>
  <title>StudentProfile</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav>
    <div>
      <%= link_to "LOGO GOES HERE", root_path %>
      <ul>
        <li><%= link_to "Available Students" %></li>
        <li><%= link_to "All Students", users_path %></li>
      </ul>
      <ul>
        <% if user_signed_in? %>
          <li><%= link_to current_user.full_name, user_path(current_user) %></li>
          <li><%= link_to "Sign Out", sessions_path, method: :delete,
                                                     data: {confirm: "Are you sure you want to sign out?"} %></li>
        <% else %>
          <li><%= link_to "Sign In", new_session_path %></li>
          <li><%= link_to "Sign Up", new_user_path %></li>
        <% end %>
      </ul>
    </div>
  </nav>

<%= yield %>

</body>
</html>
